%h1.text-center Profile
.col-md-10.col-md-offset-1
  = form_for :profile, url: profiles_path, html: { class: "form-horizontal well" } do |f|
    .form-group
      = f.label :birthday, class: 'control-label col-md-1'
      .col-md-4
        = f.date_field :birthday, class: "form-control"

      = f.label :job, class: 'control-label col-md-1 col-md-offset-1'
      .col-md-4
        = f.text_field :job, class: "form-control"

    .form-group
      = f.label :school, class: 'control-label col-md-1'
      .col-md-4
        = f.text_field :school, class: "form-control"

      = f.label :birthplace, class: 'control-label col-md-1 col-md-offset-1'
      .col-md-4
        = f.text_field :birthplace, class: "form-control"

    .form-group
      = f.label :location, class: 'control-label col-md-1'
      .col-md-4
        = f.text_field :location, class: 'form-control'

      .col-md-5.col-md-offset-1
        %button.btn.btn-default#add-movies-profile{type: 'button', :'data-toggle' => 'modal', :'data-target' => '#moviesModal'}
          Movies
          %span.glyphicon.glyphicon-chevron-right
= render "movies_modal"

!!! 5
%head  
  %title Discover
  = stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Satisfy'
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  = render 'layouts/header'
  .container
    .row
      .col-md-12
        #flash
          - if flash
            - flash.each do |key, value|
              .alert{ class: "alert-#{key}" }
                %a.close{:'data-dismiss' => 'alert', href: '#'} &times;
                %p= value
        = yield

    %footer
      %p.copyright
        &copy; #{Date.today.year} Discover, All rights reserved
      %p.version
        = Discover::VERSION

%h1.text-center Welcome to Discover
.col-md-4.col-md-offset-4
  = form_tag(sessions_path, method: :post, class: "form-horizontal well") do
    .form-group
      = label_tag 'email', 'Email', class: "control-label col-md-3"
      .col-md-9
        = email_field_tag 'email', nil, class: "form-control" 

    .form-group
      = label_tag 'password', 'Password', class: "control-label col-md-3"
      .col-md-9
        = password_field_tag 'password', nil, class: "form-control" 

    .form-group-submit.form-group
      .col-md-9.col-md-offset-3
        = submit_tag "Login", class: "btn btn-primary"
      .col-md-5.col-md-offset-3#forgot-register
        = submit_tag "Forgot Password?", class: "btn btn-default"
      .col-md-4#forgot-register
        = link_to "Sign Up", new_users_path, class: "btn btn-default"
